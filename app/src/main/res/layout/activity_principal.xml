<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/origiin"
    tools:context=".Activites.PrincipalActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-2dp"
        android:background="@color/colorPrimaryDark"
        android:scrollbarSize="0dp"
        app:elevation="0dp"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/guante"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/descripcion"
            android:maxWidth="40dp"
            android:onClick="goPorteros"
            app:srcCompat="@drawable/guantes" />

        <ImageView
            android:id="@+id/bota"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/descripcion"
            android:maxWidth="40dp"
            android:onClick="goJugadores"
            app:srcCompat="@drawable/icono_bota" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/blancoCopa"
            android:contentDescription="@string/descripcion"
            android:maxWidth="40dp"
            android:onClick="goUpdate"
            android:tint="@color/blancoCopa"
            app:srcCompat="@drawable/update" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/colorGreenRaro"
            android:contentDescription="@string/descripcion"
            android:maxWidth="40dp"
            android:onClick="logOut"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/salir_48" />


    </LinearLayout>

</RelativeLayout>