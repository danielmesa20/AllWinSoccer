<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/origiin"
    tools:context=".Activites.PrincipalActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-2dp"
        android:background="@color/colorPrimaryDark"
        android:scrollbarSize="0dp"
        app:elevation="0dp"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-2dp"
        android:backgroundTint="@color/colorGreenRaro"
        android:contentDescription="@string/descripcion"
        android:maxWidth="40dp"
        android:onClick="logOut"
        android:tint="@color/colorWhite"
        app:srcCompat="@drawable/salir_48" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/descripcion"
        android:onClick="goUpdate"
        app:srcCompat="@drawable/update" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:contentDescription="@string/descripcion"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/imageView"
        android:onClick="goJugadores"
        app:srcCompat="@drawable/ic_notifications_black_24dp" />


</RelativeLayout>